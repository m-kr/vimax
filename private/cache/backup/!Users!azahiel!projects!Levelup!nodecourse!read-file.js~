class Person {
    constructor() {
      this.some = 'sdf';
    }

    someMethos() {
        this.name = 'John';

        return this.name;
    }
}

var person = new Person();

fs.readFile(filePath, 'utf8', function(err, data) {
    if (err) {
        return console.error(err);
    }
    console.log(data.split('\n').length - 1);
});
